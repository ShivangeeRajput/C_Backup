<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/cupid"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cupid"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cupid"
        tools:targetApi="31" >

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/heart" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/background" />
        <activity
            android:name=".MainActivity"
            android:exported="false"/>
        <activity
            android:name=".FCMNotification.Notifications"
            android:exported="false" />

        <activity
            android:name=".Onboarding.Splash_Screen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <service
            android:name=".FCMNotification.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>